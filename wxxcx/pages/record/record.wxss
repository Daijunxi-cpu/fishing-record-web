.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 照片轮播 */
.image-swiper {
  width: 100%;
  height: 500rpx;
}

.image-swiper image {
  width: 100%;
  height: 100%;
}

/* 信息区域 */
.info-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.info-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
  display: block;
}

.value {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.remarks {
  font-size: 28rpx;
  color: #666666;
  font-weight: normal;
  line-height: 1.6;
}

/* 地图区域 */
.map-section {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  height: 400rpx;
}

.map {
  width: 100%;
  height: 100%;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.delete-btn {
  background: #ff4d4f;
  color: #ffffff;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  border: none;
}

.delete-btn:active {
  opacity: 0.8;
} 