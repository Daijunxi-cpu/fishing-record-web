/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  /* background: url('assets/bg/fishing.jpg') no-repeat center center; */
  /* background-size: cover; */
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.75);
  z-index: 0;
}

.bg-image {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  pointer-events: none;
}

/* 统计卡片样式 */
.stats-card {
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
  padding: 24rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 记录列表样式 */
.records-list {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.record-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-date {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.record-location {
  font-size: 24rpx;
  color: #666666;
}

.record-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-fish {
  font-size: 26rpx;
  color: #4CAF50;
}

.record-weather {
  font-size: 24rpx;
  color: #666666;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.add-btn {
  background: #4CAF50;
  color: #ffffff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

.add-btn:active {
  opacity: 0.8;
}

.main-container {
  padding: 24rpx;
  background: transparent;
  position: relative;
  z-index: 1;
}
.latest-record-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(76,175,80,0.10);
  overflow: hidden;
  margin-bottom: 32rpx;
}
.latest-photo {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
  display: block;
}
.latest-info {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.latest-date {
  font-size: 28rpx;
  color: #1565C0;
  font-weight: bold;
}
.latest-location {
  font-size: 24rpx;
  color: #888;
}
.empty-latest {
  text-align: center;
  color: #bbb;
  margin: 40rpx 0;
}
.recent-list-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: bold;
}
.recent-list {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  padding-bottom: 16rpx;
}
.recent-item {
  width: 120rpx;
  margin-right: 20rpx;
  text-align: center;
}
.recent-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  object-fit: cover;
  margin-bottom: 8rpx;
}
.recent-date {
  font-size: 20rpx;
  color: #888;
}

.time-display {
  background: #fff;
  padding: 24rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(33,150,243,0.05);
}

.current-time {
  font-size: 48rpx;
  font-weight: bold;
  color: #2196F3;
  display: block;
  margin-bottom: 8rpx;
}

.current-date {
  font-size: 28rpx;
  color: #666;
  display: block;
}
